<h1>Airports</h1>

<%= link_to "Flights", "flights#index"%>

<table>

  <thead>
    <tr>
     
      <th>name</th>
      <th>inbound flights</th>
      <th>outbound flights</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @airports.each do |airport| %>
      <tr>
        <td><%= airport.name %></td>
        <td><%= airport.inbound_flights.first %></td>
        <td><%= airport.outbound_flights.first %></td>



        <% end %>
      </tr>
  </tbody>
</table>